generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String     @id @default(uuid()) @db.Uuid
  name       String?
  email      String     @unique
  createdAt  DateTime   @default(now())
  reviews    Review[]
  favorites  Favorite[]
}

model Cafe {
  id            String     @id @default(uuid()) @db.Uuid
  name          String
  address       String?
  city          String
  googlePlaceId String     @unique
  latitude      Float?
  longitude     Float?
  createdAt     DateTime   @default(now())
  reviews       Review[]
  favorites     Favorite[]
}

model Review {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String   @db.Uuid
  cafeId          String   @db.Uuid
  tasteRating     Int
  aestheticRating Int
  studyRating     Int
  priceEstimate   Float?
  textComment     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  cafe Cafe @relation(fields: [cafeId], references: [id])

  // one review per user per cafe
  @@unique([userId, cafeId])

}

model Favorite {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  cafeId    String   @db.Uuid
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  cafe Cafe @relation(fields: [cafeId], references: [id])

  // one favorite per user per cafe
  @@unique([userId, cafeId])
}
